<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/try_font"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="dev.edmt.advancedsearchbar.tryFont"
    tools:showIn="@layout/activity_try_font">


    <EditText
        android:id="@+id/etTryfont"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:gravity="top|left"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="The quick brown fox jumps over the lazy dog." />


    <RelativeLayout
        android:id="@+id/actions"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/etTryfont"
        android:background="#000000" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actions"
        android:gravity="bottom|center">

        <Button
            android:id="@+id/write"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/fonts"
            android:layout_weight=".25"
            android:background="#ffffff"
            android:text="Text" />

        <Button
            android:id="@+id/font"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/format"
            android:layout_weight=".25"
            android:background="#ffffff"
            android:text="Font" />


        <Button
            android:id="@+id/format"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/fonts"
            android:layout_weight=".25"
            android:background="#ffffff"
            android:text="Format" />

        <Button
            android:id="@+id/background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/write"
            android:layout_weight=".25"
            android:background="#ffffff"
            android:text="Background" />

    </android.support.v7.widget.LinearLayoutCompat>
</RelativeLayout>
